extends /pug/includes/template
include /pug/mixins/meatballs
include /pug/mixins/foro/atoms
include /pug/mixins/foro/publication
include /pug/mixins/foro/user
include /pug/mixins/foro/featured-publication
include /pug/mixins/foro/sidebar
include /pug/mixins/foro/comment
include /pug/mixins/foro/editor
append config
  -topicsMenu = false
  -currentPage = 'foro'

block main
  main.ed-container.l-section.l-section--main
    .ed-grid.cols-l-4
      .span-l-3
        section
          +publication(true)
            section.section-comments
              +comment('comment')
              +comment('answered')
                section.l-block.section-answer
                  +comment(class="comment--best-answer")
                  +comment
                  +editor
              section#form-editor
                h3 Escribir una respuesta
                +editor(true)

      .span-l-1
        +foro-sidebar("Publicaciones destacadas")
        +foro-sidebar("Publicaciones relacionadas")
