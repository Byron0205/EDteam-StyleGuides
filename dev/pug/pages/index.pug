extends ../includes/template
mixin color(cname,code,sassName,cssName)
  .color
    div(class="color__sample " + sassName)
    .color__info.smaller
      p.color__name= cname
      p.color__code= code
      p.color__code Sass name: <code>$#{sassName}</code>
      p.color__code CSS name: <code>--#{cssName}</code>

append config
  -currentPage = 'inicio'
block banner
  +banner("https://images.pexels.com/photos/265614/pexels-photo-265614.jpeg?w=1260&h=750&auto=compress&cs=tinysrgb", 'EDteam Styleguides', 'La presente guía de estilos define los componentes de diseño de EDteam y cómo implementarlos en nuestros productos.', '', true, false)
block main
  p Esta guia define el concepto visual, patrones de diseño y estructura para proyectos web en EDteam.
  p Esta guia se encuentra en constante actualización.

  h2 Colores

  .colors
    +color('Principal', '#007BDF', 'firstColor', 'first-color')
    +color('Principal Alt', '#006DC6', 'firstColorAlt', 'first-color-alt')

    +color('Secundario', '#00CBFF', 'secondColor', 'second-color')
    +color('Secundario Alt', '#00BFF0', 'secondColorAlt', 'second-color-alt')

    +color('Terciario', '#FF3C32', 'thirdColor', 'third-color')
    +color('Terciario Alt', '#FF2419', 'thirdColorAlt', 'third-color-alt')

    +color('Enfásis', '#FBA905', 'accentColor', 'accent-color')
    +color('Enfásis Alt', '#F1A000', 'accentColorAlt', 'accent-color-alt')

    +color('Oscuro', '#282D31', 'darkColor', 'dark-color')
    +color('Oscuro Alt', '#141618', 'darkColorAlt', 'dark-color-alt')

    +color('Bordes', '#DFE0E0', 'borderColor', 'border-color')
    +color('Texto', '#53575A', 'textColor', 'text-color')
    +color('Body BG', '#FAFDFF', 'bodyBg', 'body-bg')




    //.color
      .color__sample.color--primary
      .color__info.smaller
        p.color__name Principal
        p.color__code #007BDF
        p.color__code <code>$firstColor</code>

    //.color
      .color__sample.color--secondary
      .color__info.smaller
        p.color__name Secundario
        p.color__code #00CBFF
        p.color__code <code>$secondColor</code>

    //.color
      .color__sample.color--tertiary
      .color__info.smaller
        p.color__name Terciario
        p.color__code #FF3C32
        p.color__code <code>$thirdColor</code>

    //.color
      .color__sample.color--accent
      .color__info.smaller
        p.color__name Enfasis
        p.color__code #FBA905
        p.color__code <code>$accentColor</code>

    //.color
      .color__sample.color--dark
      .color__info.smaller
        p.color__name Oscuro
        p.color__code #282D31
        p.color__code <code>$darkColor</code>

    //.color
      .color__sample.color--border
      .color__info.smaller
        p.color__name Bordes
        p.color__code #DFE0E0
        p.color__code <code>$borderColor</code>

    //.color
      .color__sample.color--text
      .color__info.smaller
        p.color__name Texto
        p.color__code #53575A
        p.color__code <code>$textColor</code>

    //.color
      .color__sample.color--body
      .color__info.smaller
        p.color__name Body bg
        p.color__code #FCFCFC
        p.color__code <code>$bodyBg</code>

  h2 Tipografía

  p EDteam utiliza dos familias tipográficas en web, logotipo, posters y demás elementos gráficos

  ul.data-list
    li
      strong Open Sans (700)
      br
      span.small Encabezados, logo de EDteam y otros logos (EDgrid p.ej.) <code>$body-font</code>
    li
      strong Lato (400, 400i, 700)
      br
      span.small Contenidos, párrafos <code>$heading-font</code>

  p En la sección de <a href="tipografia.html">tipografía</a> se explica detalladamente su uso.
